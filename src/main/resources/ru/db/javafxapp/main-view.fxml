<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.db.javafxapp.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextArea fx:id="historyArea" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10">

        <Button text="Прикрепить файл" defaultButton="true" onAction="#clickCheckButton"/>
        <Button text="Добавить Контакт" defaultButton="true" onAction="#clickCheckButton"/>
        <Button text="☺" defaultButton="true" onAction="#clickCheckButton"/>
    </HBox>

    <HBox spacing="10">
<Label text="Введите своё сообщение: "/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="userMessage" HBox.hgrow="ALWAYS"/>
        <Button text="Отправить ↗" defaultButton="true" onAction="#clickCheckButton"/>
    </HBox>
</VBox>

